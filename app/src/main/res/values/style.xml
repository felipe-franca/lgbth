<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="splash_screen_image_200">
        <item name="android:src">@mipmap/ic_theme</item>
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">200dp</item>
    </style>
    <style name="default_card">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">180dp</item>
        <item name="cardCornerRadius">24dp</item>
        <item name="android:layout_margin">8dp</item>
    </style>
    <style name="home_options">
        <item name="android:layout_width">80dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:background">@drawable/home_options_background</item>
        <item name="android:padding">6dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>